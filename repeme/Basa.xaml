<Window x:Class="repeme.Basa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:repeme"
        mc:Ignorable="d"
        Title="Basa" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem>Выйти</MenuItem>
            <MenuItem>Товары</MenuItem>
        </Menu>
        <TextBox Grid.Row="1" VerticalAlignment="Center" TextAlignment="Center" FontSize="18" Margin="40 5" FontFamily="Arial"></TextBox>
    </Grid>
</Window>
